[Unit]
Description=Ads Server - Python Flask Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/ads
Environment="PATH=/var/www/ads/venv/bin"
ExecStart=/var/www/ads/venv/bin/gunicorn --bind 0.0.0.0:8089 --workers 4 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
